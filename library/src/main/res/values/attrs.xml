<resources>

    <declare-styleable name="GukizeView">
        <attr name="gkz_retryType">
            <enum name="none" value="0"/>
            <enum name="click" value="1"/>
            <enum name="longClick" value="2"/>
        </attr>
        <attr name="gkz_autoStart" format="boolean"/>
        <attr name="gkz_maxImageWidth" format="dimension"/>
        <attr name="gkz_maxImageHeight" format="dimension"/>
        <attr name="gkz_placeholderDrawable" format="reference"/>
        <attr name="gkz_placeholderScaleType">
            <enum name="fitXY" value="1"/>
            <enum name="fitStart" value="2"/>
            <enum name="fitCenter" value="3"/>
            <enum name="fitEnd" value="4"/>
            <enum name="center" value="5"/>
            <enum name="centerCrop" value="6"/>
            <enum name="centerInside" value="7"/>
        </attr>
        <attr name="gkz_actualScaleType">
            <enum name="fitXY" value="1"/>
            <enum name="fitStart" value="2"/>
            <enum name="fitCenter" value="3"/>
            <enum name="fitEnd" value="4"/>
            <enum name="center" value="5"/>
            <enum name="centerCrop" value="6"/>
            <enum name="centerInside" value="7"/>
        </attr>
        <attr name="gkz_failureDrawable" format="reference"/>
        <attr name="gkz_failureScaleType">
            <enum name="fitXY" value="1"/>
            <enum name="fitStart" value="2"/>
            <enum name="fitCenter" value="3"/>
            <enum name="fitEnd" value="4"/>
            <enum name="center" value="5"/>
            <enum name="centerCrop" value="6"/>
            <enum name="centerInside" value="7"/>
        </attr>
    </declare-styleable>

</resources>
